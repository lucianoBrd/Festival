{% extends 'base.html.twig' %}

{% block title %}Liste des films en compétition{% endblock %}

{% block body %}
<h1>Liste des films en compétition</h1>

<section class="movies">

    {% for movie in movies %}
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">{{ movie.title }}</h4>
                <h6 class="card-subtitle mb-2 text-muted">durée : {{ movie.length }} minutes</h6>
                <p class="card-text">{% if movie.competing %}
                        Ce film est en compétition <br>
                        {% else %}
                        Ce film n'est pas en compétition <br>
                        {% endif %}
                    </p>
                <a href="{{ path('movie_edit', {'id': movie.id}) }}" class="card-link" data-ytta-id="-">Modifier</a>
                <a href="{{ path('movie_delete', {'id' : movie.id}) }}" class="card-link" data-ytta-id="-">Supprimer</a>
            </div>
        </div>
    {% endfor %}

</section>
<a href="{{ path('movie_create') }}"><button type="button" class="btn btn-primary">Ajouter un film</button></a>
{% endblock %}
