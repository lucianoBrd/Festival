{% extends 'base.html.twig' %}
{% block breadcrumb %}
    <li class="breadcrumb-item active">Service</li>
{% endblock %}
{% block body %}

<h1>
  Liste des services
</h1>

<table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Type</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          {% for service in services %}
            <tr>
                <td>{{ service.type }}</td>
                <td><a href="{{ path('service_edit', {'id': service.id}) }}" class="btn btn-outline-primary">Modifier</a></td>
            </tr>
          {% endfor %}
        </tbody>
</table> 
<div class="pagination">
  {{ knp_pagination_render(services) }}
</div>
{% endblock %}