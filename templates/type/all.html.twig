{% extends 'base.html.twig' %}
{% block breadcrumb %}
    <li class="breadcrumb-item active">Type</li>
{% endblock %}
{% block body %}

<h1>
  Liste des types
</h1>

<table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Nom</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          {% for type in types %}
            <tr>
                <td>{{ type.name }}</td>
                <td><a href="{{ path('type_edit', {'id': type.id}) }}" class="btn btn-outline-primary">Modifier</a></td>
            </tr>
          {% endfor %}
        </tbody>
</table> 
<div class="pagination">
  {{ knp_pagination_render(types) }}
</div>
{% endblock %}