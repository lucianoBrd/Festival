{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ path('security_login') }}">Connexion</a></li>
    <li class="breadcrumb-item active">Réinitialiser le mot de passe</li>
{% endblock %}
{% block body %}
<h1>
    Réinitialiser le mot de passe
</h1>

{{ form_start(form) }}
{{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Mot de passe'}}) }}
{{ form_row(form.confirm_password, {'label': 'Confirmer le mot de passe', 'attr': {'placeholder': 'Confirmer le mot de passe'}}) }}
<input type="hidden" name="token" value="{token}">
<button type="submit" class="btn btn-outline-primary">Modifier</button>
{{ form_end(form) }}

{% endblock %}
