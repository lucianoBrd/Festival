{% extends 'base.html.twig' %}

{% block title %}Liste des salles de projection{% endblock %}

{% block body %}
<h1>Liste des salles de projection</h1>

<section class="rooms">

    {% for room in rooms %}
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">{{ room.name }}</h4>
                <h6 class="card-subtitle mb-2 text-muted">Capacit√© : {{ room.capacity }}</h6>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's
                    content.</p>
                <a href="{{ path('room_edit', {'id': room.id}) }}" class="card-link" data-ytta-id="-">Editer</a>
                <a href="{{ path('room_delete', {'id' : room.id}) }}" class="card-link" data-ytta-id="-">Supprimer</a>
            </div>
        </div>
    {% endfor %}

</section>
{% endblock %}
